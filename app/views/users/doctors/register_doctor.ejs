<%include ../../header.ejs%>

<div class="panel panel-primary registration-panel">
  <div class="panel-heading"><strong>Rejestracja Lekarza</strong></div>
  <div class="panel-body">

    <div class="alert alert-dismissible alert-danger">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <strong>Hasła muszą się zgadzać</strong>
    </div>

    <form class="form" action="">

      <div class="form-group-md">
        <input type="text" class="form-control" id="inputUsername" placeholder="Nazwa Użytkownika">
      </div>

      <div class="form-group">
        <input type="text" class="form-control" id="inputFirstName" placeholder="Imię">
      </div>

      <div class="form-group">
        <input type="text" class="form-control" id="inputLastName" placeholder="Nazwisko">
      </div>

      <div class="form-group">
        <input type="text" class="form-control" id="inputCity" placeholder="Miasto">
      </div>

      <!--<div class="form-group">-->
        <!--<input type="text" class="form-control" id="inputPesel" placeholder="PESEL">-->
      <!--</div>-->

      <div class="form-group">
      <input type="text" class="form-control" id="inputSpeciality" placeholder="Specjalizacja">
      </div>

      <div class="form-group">
        <input type="password" class="form-control" id="inputPassword" placeholder="Hasło">
      </div>

      <div class="form-group label-static">
        <input type="password" class="form-control" id="inputPassword2" placeholder="Potwierdzenie Hasła">
      </div>

      <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Rejestracja</button>

        <button type="submit" class="btn btn-danger">Anuluj</button>
      </div>
    </form>
  </div>
</div>

<%include ../../footer.ejs%>
